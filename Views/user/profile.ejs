                        <input type="text" class="form-control" id="fullName" name="fullName" value="<%= user.username %>">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" value="<%= user.email %>" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="number" class="form-control" id="phone" name="phone" value="<%= user.phone %>" placeholder="Enter your phone number" autocomplete="off" />
