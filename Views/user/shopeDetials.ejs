            <div class="top-filter-head" onclick="toggleFilter('brand-filter')">
              Product Filters - Brands
              <span id="toggleIcon" class="lnr lnr-chevron-down"></span>
            </div>
            <!-- Brand Filter -->
            <div class="common-filter brand-filter" style="display: none;">
              <div class="head">Brands</div>
              <form action="#">
                <ul>
                  <% brandsSet = new Set(); %>
                  <% products.forEach((product) => { brandsSet.add(product.brand); }); %>
                  <% const uniqueBrands = Array.from(brandsSet); %>
                  <% uniqueBrands.forEach((brand, index) => { %>
                    <li class="filter-list">
                      <input class="pixel-radio"
                             type="radio"
                             id="brand<%= index %>"
                             name="brand"
                             value="<%= brand %>" />
                      <label for="brand<%= index %>">
                        <%= brand %>
                        <span>(<%= products.filter(product => product.brand === brand).length %>)</span>
                      </label>
                    </li>
                  <% }) %>
                </ul>
              </form>
            </div>
          
            <div class="top-filter-head" onclick="toggleFilter('color-filter')">
              Product Filters - Colors
              <span id="toggleIcon" class="lnr lnr-chevron-down"></span>
            </div>
            <!-- Color Filter -->
            <div class="common-filter color-filter" style="display: none;">
              <div class="head">Color</div>
              <form action="#">
                <ul>
                  <% const colorsSet = new Set(products.map(product => product.color)); %>
                  <% const uniqueColors = Array.from(colorsSet); %>
                  <% uniqueColors.forEach((color, index) => { %>
                    <li class="filter-list">
                      <input class="pixel-radio"
                             type="radio"
                             id="color<%= index %>"
                             name="color"
                             value="<%= color %>" />
                      <label for="color<%= index %>">
                        <%= color %>
                        <span>(<%= products.filter(product => product.color === color).length %>)</span>
                      </label>
                    </li>
                  <% }) %>
                </ul>
              </form>
            </div>
          
            <!-- Filter Button -->
            <div class="mt-5">
