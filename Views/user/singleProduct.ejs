<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Page</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="css/linearicons.css">
  <link rel="stylesheet" href="css/font-awesome.min.css">
  <link rel="stylesheet" href="css/themify-icons.css">
  <link rel="stylesheet" href="css/bootstrap.css">
  <link rel="stylesheet" href="css/owl.carousel.css"> 
  <link rel="stylesheet" href="css/nice-select.css">
  <link rel="stylesheet" href="css/nouislider.min.css">
  <link rel="stylesheet" href="css/ion.rangeSlider.css" />
  <link rel="stylesheet" href="css/ion.rangeSlider.skinFlat.css" />
  <link rel="stylesheet" href="css/magnific-popup.css">
  <link rel="stylesheet" href="css/main.css">
  <style>
    .product-title {
      font-size: 24px;
      font-weight: bold;
    }
    
    .product-price {
      font-size: 20px;
      color: #28a745;
    }

    .product-description {
      margin-top: 20px;
    }

    .review-section {
      margin-top: 30px;
    }

    .review-section h3 {
      margin-bottom: 20px;
    }

    .review-card {
      border: 1px solid #e9ecef;
      margin-bottom: 15px;
      padding: 10px;
      border-radius: 5px;
    }

    .reviewer-name {
      font-weight: bold;
    }

    .rating {
      color: gold;
    }
  </style>
</head>
<body>
	<%- include('partials/header') %>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <!-- Product Image -->
        <img src="<%= product.images[0].replace('public', '') %>" alt="<%= product.name %>"  class="img-fluid">
      </div>
      <div class="col-md-6">
        <!-- Product Details -->
        <h1 class="product-title"> <%= product.name %></h1>
        <p class="product-price">$ <%= product.price %></p>
        <p class="product-description">
          <%= product.description %>
        </p>

        <!-- Size Options -->
        <div class="my-3">
			<h5>Size</h5>
			<% product.availableSize.forEach((size, index) => { %>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="sizeOptions" id="<%= size.toLowerCase() %>" value="<%= size.toLowerCase() %>" <%= index === 0 ? 'checked' : '' %>>
					<label class="form-check-label" for="<%= size.toLowerCase() %>"><%= size %></label>
				</div>
			<% }) %>
		</div>
		

        <!-- Add to Cart -->
		<div class="input-group mb-3" style="max-width: 120px;">
			<button class="btn btn-outline-secondary" type="button" id="button-minus">-</button>
			<input type="text" class="form-control text-center" id="input-value" value="1">
			<button class="btn btn-outline-secondary" type="button" id="button-plus">+</button>
		  </div>

        <button class="btn btn-dark w-100">Add to Cart</button>
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="review-section mt-5">
      <h3>Customer Reviews</h3>

      <!-- Review 1 -->
      <div class="review-card">
        <p class="reviewer-name">John D. <span class="rating">★★★★★</span></p>
        <p>Best office chair I've ever used!</p>
      </div>

      <!-- Review 2 -->
      <div class="review-card">
        <p class="reviewer-name">Sarah M. <span class="rating">★★★★</span></p>
        <p>Very comfortable, but a bit pricey.</p>
      </div>

      <!-- Review 3 -->
      <div class="review-card">
        <p class="reviewer-name">Mike A. <span class="rating">★★★★★</span></p>
        <p>Excellent lumbar support. Highly recommend.</p>
      </div>
    </div>

  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
	document.getElementById('button-minus').addEventListener('click', function() {
  var input = document.getElementById('input-value');
  var currentValue = parseInt(input.value);
  if (currentValue > 1) { // You can set a minimum value here
    input.value = currentValue - 1;
  }
});

document.getElementById('button-plus').addEventListener('click', function() {
  var input = document.getElementById('input-value');
  var currentValue = parseInt(input.value);
  input.value = `${currentValue + 1}`;
});
  </script>
</body>
</html>
