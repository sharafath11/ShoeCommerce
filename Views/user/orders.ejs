      <div class="profile-header">
        <div class="profile-avatar">
          <i class="bi bi-person-circle" style="font-size: 3rem"></i>
        </div>
        <h4><%= user.username %></h4>
        <p><%= user.email %></p>
      </div>

      <ul class="nav nav-tabs justify-content-center mb-4" id="profileTabs">
        <li class="nav-item">
