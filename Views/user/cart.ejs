  <script>
    function updateQuantity(productId, action) {
        var qtyInput = document.getElementById('sst-' + productId);
        var currentQty = parseInt(qtyInput.value);
    
        if (action === 'increase') {
            currentQty++;
        } else if (action === 'decrease' && currentQty > 1) {
            currentQty--;
        } else {
            return;
        }
    
       
        qtyInput.value = currentQty;
    
       
        $.ajax({
            url: '/cart/update-quantity',  
            method: 'POST',
            data: {
                productId: productId,
                quantity: currentQty
            },
            success: function(response) {
              
                
                var pricePerUnit = parseFloat(qtyInput.dataset.pricePerUnit); 
                var totalCell = qtyInput.closest('tr').querySelector('.total-price'); 
                totalCell.textContent = '$' + (currentQty * pricePerUnit).toFixed(2); // Update total price

                // document.addEventListener('DOMContentLoaded', function() {
                // })
                console.log('Quantity and total price updated successfully');
            },
            error: function(error) {
                console.error('Error updating quantity:', error);
               
                qtyInput.value = parseInt(qtyInput.value) + (action === 'increase' ? -1 : 1);
            }
                // location.reload();  
                // document.getElementsByClassName('qty').value=
            
           
        });
    }
    </script>
    
    <script>
        $(document).ready(function() {
            $('.remove-cart-btn').on('click', function(event) {
                var $button = $(this);
                event.preventDefault(); // Prevent the default button action
    
                var productId = $(this).data('id'); // Get product ID from data attribute
                function showToast(message) {
              Toastify({
                  text: message,
                  duration: 2000, // duration in ms
                  gravity: "top", // `top` or `bottom`
                  position: "right", // `left`, `center` or `right`
                  backgroundColor: "#333", // background color
                  stopOnFocus: true // stop on focus
              }).showToast();
          }
                $.ajax({
                    url: '/cart/remove/' + productId, 
                    method: 'DELETE',
                    success: function(response) {
                        if (response.success) {
                            
                            $button.closest('tr').remove();
                            
                            showToast(response.message)
                        }
                    },
                    error: function(error) {
                        console.error('Error removing item from cart:', error);
                        alert('Failed to remove item from cart.');
                    }
                });
            });
        });
    </script>
    
