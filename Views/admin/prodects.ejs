<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Nexus Admin | Products</title>
    <link rel="stylesheet" href="/admin/css/products.css">
</head>
<body class="sidebar-page">
    <div class="container-fluid">
        <div class="row">
            <%- include('partials/sideBar') %> 

            <main class="content-wrapper">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-5">
                    <div>
                        <h1 class="h3 fw-bold mb-0">Products Management</h1>
                        <p class="text-muted small mb-0">Manage your inventory, sizes, and pricing.</p>
                    </div>
                    <a href="/admin/products/addproducts" class="btn btn-dark px-4 py-2 rounded-3 shadow-sm">
                        <i class="bi bi-plus-lg me-2"></i>Add Product
                    </a>
                </div>

                <!-- Tools -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="search-box position-relative" style="width: 350px;">
                        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input type="text" class="form-control ps-5" id="searchInput" placeholder="Search by name or brand...">
                    </div>
                </div>

                <!-- Products Card -->
                <div class="card p-0 overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0" id="productsTable">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Product</th>
                                    <th>Inventory</th>
                                    <th>Price</th>
                                    <th>Category</th>
                                    <th>Color</th>
                                    <th>Performance</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Products.forEach((product) => { %>
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="product-img-slot me-3 d-flex align-items-center justify-content-center overflow-hidden">
                                                <% if (product.images && product.images.length > 0) { %>
                                                    <img src="<%= product.images[0].url %>" alt="<%= product.name %>" style="width: 100%; height: 100%; object-fit: cover;">
                                                <% } else { %>
                                                    <i class="bi bi-image text-muted"></i>
                                                <% } %>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark product-name"><%= product.name %></div>
                                                <div class="text-muted small product-brand"><%= product.brand %></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="small">
                                            <% product.availableSize.forEach(function(item) { %>
                                              <span class="badge bg-light text-dark border badge-stock mb-1">
                                                <%= item.size %>: <%= item.stock %>
                                              </span>
                                            <% }); %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="fw-bold">â‚¹<%= product.price.toLocaleString() %></div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary-subtle text-muted rounded-pill">
                                            <%= product?.categoryId?.name || 'Uncategorized' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="rounded-circle me-2 color-preview" style="background-color: <%= product.color?.toLowerCase() %>;"></span>
                                            <span class="small text-muted text-capitalize"><%= product.color %></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="small text-muted"><%= product.sales %> sales</div>
                                        <a href="/admin/reviews/<%= product._id %>" class="text-primary x-small text-decoration-none">View Reviews</a>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-sm <%= product.blocked ? 'btn-success' : 'btn-outline-danger' %> btn-toggle-list" 
                                                    data-id="<%= product._id %>" 
                                                    data-status="<%= product.blocked ? 'list' : 'unlist' %>">
                                                <%= product.blocked ? 'List' : 'Unlist' %>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                <nav class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="/admin/products?page=<%= currentPage - 1 %>">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>

                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="/admin/products?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>

                        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                            <a class="page-link" href="/admin/products?page=<%= currentPage + 1 %>">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <% } %>
            </main>
        </div>
    </div>

    <!-- Hidden input for flash messages -->
    <% if (typeof message !== 'undefined' && message) { %>
        <input type="hidden" id="flashMessage" value="<%= message %>">
    <% } %>

    <%- include('partials/scripts') %>
    <script type="module" src="/admin/js/products.js"></script>
</body>
</html>
