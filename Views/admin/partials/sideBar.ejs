<style>
  /* Sidebar styling */
.sidebar {
  height: 100vh;
  box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease-in-out;
  position: fixed;
  top: 0;
  left: 0;
  background: #f8f9fa;
  width: 250px;
  transform: translateX(-100%); /* Initially hidden */
  z-index: 1040;
}

/* Sidebar behavior */
.sidebar.expanded {
  transform: translateX(0); /* Show sidebar when expanded */
}

/* Sidebar collapsed in mobile view */
@media (max-width: 768px) {
  .sidebar {
    transform: translateX(-100%); /* Initially hidden on mobile */
  }
  .sidebar.expanded {
    transform: translateX(0); /* Show sidebar when expanded */
  }
}

@media (min-width: 769px) {
  .sidebar {
    transform: translateX(0); /* Sidebar visible on larger screens */
  }
}

</style>
<!-- Sidebar -->
<button id="sidebarToggle" class="btn btn-primary position-fixed top-50 start-0 translate-middle-y">Toggle Sidebar</button>

<nav class="col-md-2 bg-light sidebar">
  <div class="position-sticky pt-3">
    <h3 class="sidebar-heading">Admin Dashboard</h3>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link active" href="/admin">
          <i class="bi bi-house-door"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/users">
          <i class="bi bi-people"></i>
          <span>Users</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/orders">
          <i class="bi bi-cart"></i>
          <span>Orders</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/products">
          <i class="bi bi-box"></i>
          <span>Products</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/category">
          <i class="bi bi-box"></i>
          <span>Category</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/coupon">
          <i class="bi bi-gift"></i>
          <span>Coupon</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/offers">
          <i class="bi bi-gift"></i>
          <span>Offers</span>
        </a>
      </li>
      <li class="nav-item">
        <form id="logout-form" action="/admin/logout" method="POST" style="display: none;"></form>
