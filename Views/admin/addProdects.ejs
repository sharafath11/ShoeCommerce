<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Nexus Admin | Add Product</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/admin/css/addProducts.css">
</head>
<body class="sidebar-page">
    <div class="container-fluid">
        <div class="row">
            <%- include('partials/sideBar') %> 

            <main class="content-wrapper">
                <!-- Header & Breadcrumbs -->
                <div class="mb-5">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item"><a href="/admin/products" class="text-decoration-none text-muted">Products</a></li>
                            <li class="breadcrumb-item active">Add New</li>
                        </ol>
                    </nav>
                    <h1 class="h3 fw-bold mb-0">Add New Product</h1>
                </div>

                <form id="addProductForm" enctype="multipart/form-data">
                    <div class="row g-4">
                        <!-- Left Column: Details -->
                        <div class="col-lg-8">
                            <div class="form-card mb-4">
                                <h5 class="fw-bold mb-4">Core Information</h5>
                                
                                <div class="mb-4">
                                    <label class="form-label">Product Title</label>
                                    <input type="text" name="name" class="form-control" placeholder="Enter product name" required>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <label class="form-label">Brand</label>
                                        <input type="text" name="brand" class="form-control" placeholder="e.g. Nike" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Color Way</label>
                                        <input type="text" name="color" class="form-control" placeholder="e.g. Midnight Blue" required>
                                    </div>
                                </div>

                                <div class="mb-0">
                                    <label class="form-label">Description</label>
                                    <textarea name="description" class="form-control" rows="6" placeholder="Write balanced product features..." required></textarea>
                                </div>
                            </div>

                            <div class="form-card mb-4">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="fw-bold mb-0">Inventory & Sizes</h5>
                                    <button type="button" class="btn btn-outline-primary btn-sm btn-add-size" id="addSizeStockBtn">
                                        <i class="bi bi-plus-lg me-1"></i>Add Size
                                    </button>
                                </div>
                                <div id="sizeContainer">
                                    <p class="text-muted small mb-3">Add available sizes and their respective stock levels.</p>
                                    <!-- Rows added dynamically via JS -->
                                </div>
                            </div>
                        </div>

                        <!-- Right Column: Images & Meta -->
                        <div class="col-lg-4">
                            <div class="form-card mb-4">
                                <h5 class="fw-bold mb-4">Pricing & Category</h5>
                                
                                <div class="mb-4">
                                    <label class="form-label">Listing Price (₹)</label>
                                    <input type="number" name="price" class="form-control" min="1" required>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label">Original Price (₹)</label>
                                    <input type="number" name="originalPrice" class="form-control" min="1" required>
                                </div>

                                <div class="mb-0">
                                    <label class="form-label">Category</label>
                                    <select name="category" class="form-select" required>
                                        <option value="" selected disabled>Choose collection...</option>
                                        <% categories.forEach(category => { %>
                                            <option value="<%= category._id %>"><%= category.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-card">
                                <h5 class="fw-bold mb-3">Product Media</h5>
                                <p class="text-muted small mb-4">Upload at least 3 high-quality images and crop them to square ratio.</p>
                                
                                <div class="image-upload-zone mb-4">
                                    <i class="bi bi-cloud-arrow-up h1 text-muted"></i>
                                    <div class="mt-2 small">Click to upload images</div>
                                    <input type="file" id="productImages" class="opacity-0 position-absolute start-0 top-0 w-100 h-100 cursor-pointer" accept="image/*" multiple required>
                                </div>

                                <div id="imageCropContainer" class="crop-preview-container">
                                    <!-- Croppers loaded here -->
                                </div>
                            </div>

                            <div class="mt-4 d-grid gap-2">
                                <button type="submit" class="btn btn-submit shadow-sm py-3">
                                    <i class="bi bi-cloud-check me-2"></i>Publish Product
                                </button>
                                <a href="/admin/products" class="btn btn-light border py-3 text-muted">Discard Draft</a>
                            </div>
                        </div>
                    </div>
                </form>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <%- include('partials/scripts') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script type="module" src="/admin/js/addProducts.js"></script>
</body>
</html>
