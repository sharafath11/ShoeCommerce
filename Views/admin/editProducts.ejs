<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Nexus Admin | Edit Product</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/admin/css/editProducts.css">
</head>
<body class="sidebar-page">
    <div class="container-fluid">
        <div class="row">
            <%- include('partials/sideBar') %> 

            <main class="content-wrapper">
                <!-- Header -->
                <div class="mb-5">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item"><a href="/admin/products" class="text-decoration-none text-muted">Products</a></li>
                            <li class="breadcrumb-item active">Edit Product</li>
                        </ol>
                    </nav>
                    <h1 class="h3 fw-bold mb-0">Modify Selection</h1>
                </div>

                <form id="edit-product-form">
                    <input type="hidden" name="id" id="id" value="<%= product._id %>">
                    
                    <div class="row g-4">
                        <!-- Details -->
                        <div class="col-lg-8">
                            <div class="form-card mb-4">
                                <h5 class="fw-bold mb-4">Core Metadata</h5>
                                
                                <div class="mb-4">
                                    <label class="form-label">Product Name</label>
                                    <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>" required>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <label class="form-label">Brand</label>
                                        <input type="text" class="form-control" id="brand" name="brand" value="<%= product.brand %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Color Way</label>
                                        <input type="text" class="form-control" id="color" name="color" value="<%= product.color %>" required>
                                    </div>
                                </div>

                                <div class="mb-0">
                                    <label class="form-label">Product Narrative</label>
                                    <textarea class="form-control" id="description" name="description" rows="6" required><%= product.description %></textarea>
                                </div>
                            </div>

                            <div class="form-card mb-4">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="fw-bold mb-0">Inventory Matrix</h5>
                                    <button type="button" id="addSizeStock" class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                        <i class="bi bi-plus-lg me-1"></i>New Row
                                    </button>
                                </div>
                                <div id="sizeContainer">
                                    <% product.availableSize.forEach(function(sizeStock) { %>
                                        <div class="d-flex align-items-center mb-2 size-stock-row bg-light rounded-3 gap-2">
                                            <input type="text" name="size" class="form-control w-120px" value="<%= sizeStock.size %>" required>
                                            <input type="number" name="stock" class="form-control w-120px" value="<%= sizeStock.stock %>" required>
                                            <button type="button" class="btn btn-link text-danger remove-size-stock ms-auto p-0">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                        </div>

                        <!-- Sidebar Actions -->
                        <div class="col-lg-4">
                            <div class="form-card mb-4">
                                <h5 class="fw-bold mb-4">Financials & Taxonomy</h5>
                                
                                <div class="mb-4">
                                    <label class="form-label">Active Price (₹)</label>
                                    <input type="number" class="form-control" id="price" name="price" value="<%= product.price %>" required>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label">MSRP / Original (₹)</label>
                                    <input type="number" class="form-control" id="originalPrice" name="originalPrice" value="<%= product.originalPrice %>" required>
                                </div>

                                <div class="mb-0">
                                    <label class="form-label">Global Category</label>
                                    <select id="category" name="category" class="form-select" required>
                                        <% categories.forEach(function(category) { %>
                                            <option value="<%= category._id %>" <%= category._id.equals(product.categoryId._id) ? 'selected' : '' %>>
                                                <%= category.name %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-card">
                                <h5 class="fw-bold mb-3">Asset Library</h5>
                                <p class="text-muted small mb-4">Current images are shown. Uploading new files will replace all existing assets.</p>
                                
                                <div class="mb-4">
                                    <input type="file" class="form-control" id="imageUpload" multiple accept="image/*" />
                                </div>

                                <div id="imagePreviewContainer" class="row g-3">
                                    <% product.images.forEach(function(image, index) { %>
                                        <div class="col-12">
                                            <div class="image-item shadow-sm">
                                                <img src="<%= image.url %>" class="image-preview" />
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>

                            <div class="mt-4 d-grid gap-2">
                                <button type="submit" class="btn btn-submit shadow-sm py-3">
                                    <i class="bi bi-check-lg me-2"></i>Save Changes
                                </button>
                                <a href="/admin/products" class="btn btn-light border py-3 text-muted">Cancel Modification</a>
                            </div>
                        </div>
                    </div>
                </form>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <%- include('partials/scripts') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script type="module" src="/admin/js/editProducts.js"></script>
</body>
</html>
