<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Review & Rating Admin Session</title>
    <link rel="stylesheet" href="styles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
  </head>
  <style>
    /* Global styles */
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 900px;
      margin: 30px auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .header h2 {
      margin: 0;
      font-size: 24px;
    }

    .header p {
      color: #777;
    }

    .rating-summary {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 20px 0;
    }

    .rating-value {
      font-size: 32px;
      font-weight: bold;
    }

    .stars {
      font-size: 18px;
      color: gold;
    }

    .filter label {
      margin-right: 10px;
    }

    .filter select {
      padding: 5px;
    }

    .review-item {
      border-top: 1px solid #e0e0e0;
      padding-top: 20px;
      margin-top: 20px;
    }

    .user-info {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .user-avatar img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }

    .user-details {
      flex-grow: 1;
      margin-left: 10px;
    }

    .user-rating {
      font-size: 18px;
      color: gold;
    }

    .review-content {
      margin-top: 20px;
    }

    .review-content .product-image {
      width: 400px;
      height: 300px;
      background-color: #e0e0e0;
      border-radius: 10px;
      margin-bottom: 10px;
    }

    .review-content p {
      margin: 0;
      font-size: 16px;
    }

    .review-actions {
      margin-top: 20px;
      display: flex;
      justify-content: flex-end;
    }

    .review-actions .btn {
      padding: 10px 15px;
      margin-left: 10px;
      border: none;
      border-radius: 5px;
      color: #fff;
      cursor: pointer;
    }

    .review-actions .btn.reject {
      background-color: #e74c3c;
    }

    .review-actions .btn.approve {
      background-color: #2ecc71;
    }
    .header {
       
    padding: 20px;
    background-color: #f8f9fa; 
    border-bottom: 1px solid #dee2e6; 
}

.product-info {
    display: flex;
        align-items: center;
       margin-right: 50px;
    flex-wrap: wrap;
    margin-top: 10px;
}

.product-item {
    display: flex;
    align-items: center;
    margin-right: 20px; 
    margin-bottom: 10px;
}

.product-image {
    width: 50px;
    height: 50px; 
    margin-right: 10px; 
}

.product-details {
    display: flex;
    align-items: center;
    margin-left: 207px;
    flex-direction: column;
}

  </style>
  <body>
    <div class="container">
        <div class="header">
            <h2>Review & Rating Admin Session</h2>
            <p>Manage customer reviews and ratings</p>
            
            <% if (products && products.length > 0) { %>
                <div class="product-info">
                    <% products.forEach(product => { %>
                        <div class="product-item">
                            <img src="<%= product.images[0].replace('public', '') %>" class="image-preview" />                            <div class="product-details">
                                <h3><%= product.name %></h3>
                                <p>Brand: <%= product.brand %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p>No products available</p>
            <% } %>
        </div>
        

      <div class="rating-summary">
        <div class="rating">
          <h3>Average Rating: <%= averageRating.toFixed(1) %></h3>
          <strong>(<%= reviews.length %> reviews)</strong>
        </div>
      </div>

      <% reviews.forEach(review => { %>
      <div class="review-item">
        <div class="user-info">
          <div class="user-details">
            <p><strong><%= review.name %></strong></p>
            <p><%= new Date(review.createdAt).toLocaleDateString() %></p>
          </div>
          <div class="user-rating">
            <% for (let i = 0; i < review.rating; i++) { %> ‚≠ê <% } %>
          </div>
        </div>

        <div class="review-content">
          <% if (review.imagePath && review.imagePath.trim() !== '') { %>
          <img
            src="<%= review.imagePath.replace('public', '') %>"
            alt="Product Image"
            class="product-image"
          />
          <% } else { %>
          <p>No Image Available</p>
          <% } %>

          <p><%= review.comment %></p>
        </div>

        <div class="review-actions">
          <% if (review.isBlocked) { %>
          <button
            class="btn approve"
            onclick="changeReviewStatus('<%= review._id %>', false)"
          >
            Approve
          </button>
          <% } else { %>
          <button
            class="btn reject"
            onclick="changeReviewStatus('<%= review._id %>', true)"
          >
            Reject
          </button>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.js"></script>
<script>
  async function changeReviewStatus(reviewId, shouldBlock) {
    const action = shouldBlock ? "Reject" : "Approve";

    const result = await Swal.fire({
      title: `Are you sure you want to ${action} this review?`,
      icon: "warning",
      showCancelButton: true,
      confirmButtonText: "Yes",
      cancelButtonText: "No",
    });

    if (result.isConfirmed) {
      try {
        const response = await axios.patch(`/admin/reviews/${reviewId}`, {
          isBlocked: shouldBlock,
        });
        console.log(response.data);
        if (response.data.ok) {
          location.reload();
        } else {
          showToast(response.data.msg);
        }
      } catch (error) {
        console.error(error);
        showToast(error);
      }
    }
  }

  function showToast(message) {
    Toastify({
      text: message,
      duration: 3000,
      gravity: "top", 
      position: "right", 
      backgroundColor: "gray", 
    }).showToast();
  }
</script>
