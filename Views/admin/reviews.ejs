<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Review & Rating Admin Session</title>
    <link rel="stylesheet" href="styles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
  </head>
    <link rel="stylesheet" href="/admin/css/reviews.css">
  </head>
  <body>
    <div class="container">
        <div class="header">
            <h2>Review & Rating Admin Session</h2>
            <p>Manage customer reviews and ratings</p>
            
            <% if (products && products.length > 0) { %>
                <div class="product-info">
                    <% products.forEach(product => { %>
                        <div class="product-item">
                            <img src="<%= product.images[0].url %>" class="image-preview" />                            <div class="product-details">
                                <h3><%= product.name %></h3>
                                <p>Brand: <%= product.brand %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p>No products available</p>
            <% } %>
        </div>
        

      <div class="rating-summary">
        <div class="rating">
          <h3>Average Rating: <%= averageRating.toFixed(1) %></h3>
          <strong>(<%= reviews.length %> reviews)</strong>
        </div>
      </div>

      <% reviews.forEach(review => { %>
      <div class="review-item">
        <div class="user-info">
          <div class="user-details">
            <p><strong><%= review.name %></strong></p>
            <p><%= new Date(review.createdAt).toLocaleDateString() %></p>
          </div>
          <div class="user-rating">
            <% for (let i = 0; i < review.rating; i++) { %> ‚≠ê <% } %>
          </div>
        </div>

        <div class="review-content">
          <% if (review.image && review.image.url) { %>
          <img
            src="<%= review.image.url %>"
            alt="Product Image"
            class="product-image"
          />
          <% } else { %>
          <p>No Image Available</p>
          <% } %>

          <p><%= review.comment %></p>
        </div>

        <div class="review-actions">
          <% if (review.isBlocked) { %>
          <button
            class="btn approve"
            onclick="changeReviewStatus('<%= review._id %>', false)"
          >
            Approve
          </button>
          <% } else { %>
          <button
            class="btn reject"
            onclick="changeReviewStatus('<%= review._id %>', true)"
          >
            Reject
          </button>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.js"></script>
<script type="module" src="/admin/js/reviews.js"></script>
