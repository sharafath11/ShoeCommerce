<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - Users Management</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <style>
    body {
      font-family: "Arial", sans-serif;
    }
    .sidebar {
      height: 100vh;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }
    .sidebar .nav-link {
      font-size: 16px;
    }
    .sidebar-heading {
      font-size: 1.5rem;
      color: #333;
    }
    .card {
      border-radius: 10px;
      border: none;
    }
    .card .form-control {
      border-radius: 20px;
    }
    .table th {
      font-weight: 600;
    }
  </style>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>
        
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                <h1 class="h2">Users Management</h1>
            </div>
            
            <div class="d-flex justify-content-between mb-3">
                <input class="form-control w-25" type="text" placeholder="Search users..." id="searchInput">
              </div>
            <!-- User Management Panel -->
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <table class="table" id="usersTable">
                  <thead>
                    <tr>
                      <th>SL NO</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Google user</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody id="userTableBody">
                    <% Users.forEach((user, index) => { %>
                      <tr data-username="<%= user.username.toLowerCase() %>" data-email="<%= user.email.toLowerCase() %>">
                        <td><%= index + 1 %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.googleUser %></td>
                        <td>
                          <button class="btn btn-sm btn-<%= user.block ? 'danger' : 'success' %> toggle-block-btn" data-id="<%= user._id %>">
                            <%= user.block ? 'Unlist' : 'List' %>
                          </button>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </main>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.toggle-block-btn').forEach(button => {
                button.addEventListener('click', async function() {
                    const userId = this.getAttribute('data-id');
                    try {
                        const response = await fetch(`/admin/users/toggle-block/${userId}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });
                        const result = await response.json();
                        if (result.success) {
                            // Update the button label and class based on the new block status
                            this.textContent = result.block ? 'Unlist' : 'List';
                            this.className = `btn btn-sm btn-${result.block ? 'danger' : 'success'} toggle-block-btn`;
                        }
                    } catch (error) {
                        console.error('Error toggling block status:', error);
                    }
                });
            });
        });
        </script>
        <script>
            document.getElementById('searchInput').addEventListener('input', function () {
              const searchTerm = this.value.toLowerCase();
              const rows = document.querySelectorAll('#userTableBody tr');
          
              rows.forEach(row => {
                const username = row.getAttribute('data-username');
                const email = row.getAttribute('data-email');
          
                if (username.includes(searchTerm) || email.includes(searchTerm)) {
                  row.style.display = '';
                } else {
                  row.style.display = 'none';
                }
              });
            });
          </script>
        
  </body>
</html>
