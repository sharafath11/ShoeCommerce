<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Offers | Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    
    <link rel="stylesheet" href="/admin/css/layout.css">
    <link rel="stylesheet" href="/admin/css/offers.css">
</head>
<body class="sb-expanded"> 

    <%- include('partials/sideBar') %> 

    <main class="admin-main-content">
        <div class="container-fluid">
            <div class="content-header d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="page-title">Offers Management</h1>
                    <p class="text-muted">Manage your category discounts and campaign status.</p>
                </div>
                <button type="button" class="btn btn-premium-primary" data-bs-toggle="modal" data-bs-target="#addOfferModal" onclick="clearAddForm()">
                    <i class="bi bi-plus-lg me-2"></i> Add New Offer
                </button>
            </div>

            <div class="premium-card mb-4">
                <div class="card-body">
                    <div class="row align-items-end g-3">
                        <div class="col-md-4">
                            <label class="form-label fw-bold small text-uppercase">Filter by Category</label>
                            <select class="form-select premium-select" id="categoryFilter">
                                <option value="">All Categories</option>
                                <% categories.forEach(category => { %>
                                <option value="<%= category.id %>"><%= category.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold small text-uppercase">Filter by Status</label>
                            <select class="form-select premium-select" id="isActiveFilter">
                                <option value="">All Offers</option>
                                <option value="true">Active Only</option>
                                <option value="false">Inactive Only</option>
                            </select>
                        </div>
                        <div class="col-md-4 d-flex gap-2">
                            <button class="btn btn-premium-dark flex-grow-1" onclick="filterOffers()">
                                <i class="bi bi-filter me-2"></i> Apply Filter
                            </button>
                            <a href="/admin/offers" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="premium-card shadow-sm">
                <div class="table-responsive">
                    <table class="table premium-table align-middle">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Offer Details</th>
                                <th>Discount</th>
                                <th>Category</th>
                                <th>Validity</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% offers.forEach((offer, index) => { %>
                            <tr>
                                <td><span class="text-muted"><%= index + 1 %></span></td>
                                <td>
                                    <div class="fw-bold text-dark"><%= offer.title %></div>
                                    <div class="small text-muted"><%= offer.description %></div>
                                </td>
                                <td><span class="badge-discount">-<%= offer.discount %>%</span></td>
                                <td><span class="category-pill"><%= offer.categoryId.name %></span></td>
                                <td>
                                    <div class="small fw-medium">Start: <%= new Date(offer.startDate).toLocaleDateString() %></div>
                                    <div class="small text-danger">End: <%= new Date(offer.expireDate).toLocaleDateString() %></div>
                                </td>
                                <td>
                                    <span class="status-indicator <%= offer.isActive ? 'active' : 'inactive' %>">
                                        <%= offer.isActive ? 'Active' : 'Disabled' %>
                                    </span>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-icon-edit" data-bs-toggle="modal" data-bs-target="#editOfferModal" 
                                        onclick="editOffer('<%= offer._id %>', '<%= offer.title %>', '<%= offer.description %>', <%= offer.discount %>, '<%= offer.categoryId._id %>', <%= offer.isActive %>, '<%= new Date(offer.startDate).toISOString().split('T')[0] %>', '<%= new Date(offer.expireDate).toISOString().split('T')[0] %>')">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="modal fade" id="addOfferModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg">
                    <div class="modal-header bg-dark text-white">
                        <h5 class="modal-title fw-bold">Add New Offer</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <form id="addOfferForm">
                            <div class="mb-3">
                                <label class="form-label fw-bold small">Offer Title</label>
                                <input type="text" class="form-control" id="addOfferTitle" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold small">Description</label>
                                <textarea class="form-control" id="addOfferDescription" rows="2" required></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold small">Discount (%)</label>
                                    <input type="number" class="form-control" id="addOfferDiscount" min="1" max="99" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold small">Category</label>
                                    <select class="form-select" id="addOfferCategory">
                                        <% categories.forEach(category => { %>
                                        <option value="<%= category._id %>"><%= category.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold small">Start Date</label>
                                    <input type="date" class="form-control" id="addOfferStartDate" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold small">End Date</label>
                                    <input type="date" class="form-control" id="addOfferEndDate" required />
                                </div>
                            </div>
                            <div class="mb-3 form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="addOfferIsActive" checked>
                                <label class="form-check-label fw-bold small">Set as Active</label>
                            </div>
                            <button type="submit" class="btn btn-dark w-100 py-2">Save Offer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="editOfferModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title fw-bold">Edit Offer</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <form id="editOfferForm" onsubmit="editOfferHandler(event)">
                            <input type="text" hidden id="catOffId">
                            <div class="mb-3">
                                <label class="form-label fw-bold small">Offer Title</label>
                                <input type="text" class="form-control" id="editOfferTitle" required />
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label class="form-label fw-bold small">Discount (%)</label>
                                    <input type="number" class="form-control" id="editOfferDiscount" required />
                                </div>
                                <div class="col-6">
                                    <label class="form-label fw-bold small">Category</label>
                                    <select class="form-select" id="editOfferCategory">
                                        <% categories.forEach(category => { %>
                                        <option value="<%= category.id %>"><%= category.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold small">Status</label><br>
                                <div class="btn-group w-100">
                                    <input type="radio" class="btn-check" name="isActiveEdit" id="isActiveTrue" value="true">
                                    <label class="btn btn-outline-success" for="isActiveTrue">Active</label>
                                    <input type="radio" class="btn-check" name="isActiveEdit" id="isActiveFalse" value="false">
                                    <label class="btn btn-outline-secondary" for="isActiveFalse">Inactive</label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Update Changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="/admin/js/offers.js"></script>
</body>
</html>