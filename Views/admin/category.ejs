<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Nexus Admin | Category Matrix</title>
</head>
<body class="sidebar-page">
    <div class="container-fluid">
        <div class="row">
            <%- include('partials/sideBar') %> 

            <main class="content-wrapper">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-5">
                    <div>
                        <h1 class="h3 fw-bold mb-0">Category Management</h1>
                        <p class="text-muted small mb-0">Organize your products into logical collections.</p>
                    </div>
                    <a href="/admin/category/addcategory" class="btn btn-dark px-4 py-2 rounded-3 shadow-sm">
                        <i class="bi bi-plus-lg me-2"></i>Add Category
                    </a>
                </div>

                <!-- Categories Card -->
                <div class="card p-0 overflow-hidden">
                    <div class="card-header bg-white py-3 border-bottom-0">
                        <h5 class="fw-bold mb-0">All Categories</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Category Name</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (categories && categories.length > 0) { %>
                                    <% categories.forEach(function(category) { %>
                                        <tr>
                                            <td class="ps-4">
                                                <div class="fw-bold text-dark"><%= category.name %></div>
                                            </td>
                                            <td>
                                                <div class="text-muted small text-truncate" style="max-width: 300px;">
                                                    <%= category.description %>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge badge-status <%= category.blocked ? 'bg-danger-subtle' : 'bg-success-subtle' %>">
                                                    <%= category.blocked ? 'Blocked' : 'Active' %>
                                                </span>
                                            </td>
                                            <td class="text-end pe-4">
                                                <div class="d-flex justify-content-end gap-3">
                                                    <a href="/admin/category/edit-category/<%= category._id %>" class="text-primary text-decoration-none small fw-medium">
                                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                                    </a>
                                                    <button class="toggle-list-status btn btn-link p-0 text-danger text-decoration-none small fw-medium" data-id="<%= category._id %>">
                                                        <i class="bi bi-shield-exclamation me-1"></i><%= category.blocked ? 'Unblock' : 'Block' %>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center py-5 text-muted">No categories available</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                <nav class="mt-4">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                            <a class="page-link border-0 bg-light rounded-start-pill px-4" href="/admin/category?page=<%= currentPage - 1 %>">
                                <i class="bi bi-chevron-left small me-1"></i>Prev
                            </a>
                        </li>
                        <li class="page-item active mx-2">
                            <span class="page-link border-0 rounded-circle shadow-sm"><%= currentPage %></span>
                        </li>
                        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                            <a class="page-link border-0 bg-light rounded-end-pill px-4" href="/admin/category?page=<%= currentPage + 1 %>">
                                Next<i class="bi bi-chevron-right small ms-1"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <% } %>
            </main>
        </div>
    </div>

    <!-- Hidden input for flash messages -->
    <% if (typeof message !== 'undefined' && message) { %>
        <input type="hidden" id="flashMessage" value="<%= message %>">
    <% } %>

    <%- include('partials/scripts') %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script type="module" src="/admin/js/category.js"></script>
</body>
</html>
