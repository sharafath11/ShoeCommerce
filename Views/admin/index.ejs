<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin | Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/admin/css/dashboard.css?v=1.1">
</head>
<body class="sidebar-page">
    <div class="container-fluid">
        <div class="row">
            <%- include('partials/sideBar') %>  

            <main class="content-wrapper px-md-4">
                <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-4 border-bottom">
                    <h1 class="h2">Dashboard</h1>
                    <a href="/admin/sales/report" class="btn btn-dark shadow-sm">Sales Report</a>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="card stat-card"><div class="card-body">
                            <small class="text-muted fw-bold">REVENUE</small>
                            <h3 class="mb-0 mt-1">₹<%= totalRevenue %></h3>
                        </div></div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card"><div class="card-body">
                            <small class="text-muted fw-bold">SALES</small>
                            <h3 class="mb-0 mt-1"><%= totalSalesCount %></h3>
                        </div></div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card"><div class="card-body">
                            <small class="text-muted fw-bold">USERS</small>
                            <h3 class="mb-0 mt-1"><%= totalUsers %></h3>
                        </div></div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card"><div class="card-body">
                            <small class="text-muted fw-bold">PRODUCTS</small>
                            <h3 class="mb-0 mt-1"><%= totalProducts %></h3>
                        </div></div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-lg-8">
                        <div class="card shadow-sm p-4 h-100">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="fw-bold">Sales Overview</h5>
                                <select id="dataFilter" class="form-select w-auto" onchange="updateChart()">
                                    <option value="mt">Monthly</option>
                                    <option value="yr">Yearly</option>
                                </select>
                            </div>
                            <canvas id="myChart" height="150"></canvas>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card shadow-sm p-4 h-100">
                            <h5 class="fw-bold mb-3">Recent Orders</h5>
                            <table class="table table-sm">
                                <tbody>
                                    <% newOrders.forEach((order) => { %>
                                    <tr>
                                        <td>#<%= order.orderId %></td>
                                        <td><span class="badge bg-light text-dark"><%= order.status %></span></td>
                                        <td class="text-end">₹<%= order.totalAmount %></td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <h4 class="mb-4 fw-bold">Top Rankings</h4>
                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white py-3 fw-bold">Top Selling Products</div>
                            <ul class="list-group list-group-flush">
                                <% topTenSellingProducts.forEach(product => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div><p class="mb-0 fw-medium"><%= product.productDetails.name %></p>
                                    <small class="text-success">₹<%= product.productDetails.price %></small></div>
                                    <span class="badge bg-primary rounded-pill"><%= product.totalQuantitySold %></span>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white py-3 fw-bold">Top Selling Categories</div>
                            <ul class="list-group list-group-flush">
                                <% topTenSellingCategories.forEach(category => { %>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span><%= category.categoryDetails.name %></span>
                                    <span class="text-muted"><%= category.totalQuantitySold %> sold</span>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white py-3 fw-bold">Top Selling Brands</div>
                            <ul class="list-group list-group-flush">
                                <% topTenSellingBrands.forEach(brand => { %>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span><%= brand._id %></span>
                                    <span class="text-muted"><%= brand.totalQuantitySold %> items</span>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <div class="card shadow-sm p-4">
                            <h5 class="fw-bold mb-3">New Users</h5>
                            <table class="table table-hover">
                                <thead class="table-light"><tr><th>Name</th><th>Email</th><th>Date</th></tr></thead>
                                <tbody>
                                    <% newUsers.forEach((user) => { %>
                                    <tr><td><%= user.username %></td><td><%= user.email %></td><td><%= new Date(user.createdAt).toLocaleDateString() %></td></tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm p-4 border-start border-danger border-4">
                            <h5 class="fw-bold mb-3 text-danger">Out of Stock Alerts</h5>
                            <table class="table table-hover">
                                <thead class="table-light"><tr><th>Product</th><th>Brand</th><th>Price</th></tr></thead>
                                <tbody>
                                    <% outOfStockProducts.forEach((product) => { %>
                                    <tr><td><%= product.name %></td><td><%= product.brand %></td><td>₹<%= product.price %></td></tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/admin/js/dashboard.js"></script>
    <script>
        const mData = <%= JSON.stringify(monthlyRevenue) %>;
        const yData = <%= JSON.stringify(yearlyRevenue) %>;
        mData.pop(); yData.pop();
        initChart(mData, yData, <%= currentYear %>);
    </script>
</body>
</html>