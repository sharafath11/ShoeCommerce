<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<style>
  body {
    font-family: 'Arial', sans-serif;
}

.sidebar {
    height: 100vh;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
}

.sidebar-heading {
    padding: 1.5rem;
    font-size: 1.5rem;
    text-align: center;
}

.sidebar .nav-link {
    padding: 15px;
    font-size: 1.1rem;
    color: #333;
}

.sidebar .nav-link:hover, .nav-link.active {
    background-color: #f0f0f0;
    color: #007bff;
}

.card {
    margin-top: 20px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}

.chart-placeholder {
    height: 200px;
    background-color: #f8f9fa;
    border: 1px solid #ddd;
    border-radius: 4px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #6c757d;
    font-size: 1.2rem;
}

</style>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('partials/sidebar') %>
    
            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Dashboard</h1>
                   <button class="btn btn-dark"> <a href="/admin/sales/report">Sales  Report</a></button>
                </div>
    
                <!-- Stats Row -->
                <div class="row">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Total Revenue</h5>
                                <p class="card-text display-6">₹<%= totalRevenue %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Sales</h5>
                                <p class="card-text display-6"><%= totalSalesCount %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Total Users</h5>
                                <p class="card-text display-6"><%= totalUsers %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Total Products</h5>
                                <p class="card-text display-6"><%= totalProducts %></p>
                            </div>
                        </div>
                    </div>
                </div>
    
                <!-- New Users and Recent Orders Row -->
                <div class="row mt-4">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">New Users</h5>
                                <table class="table table-borderless">
                                    <thead>
                                        <tr>
                                            <th>SLNO</th>
                                            <th>Name</th>
                                            <th>Signup Date</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% newUsers.forEach((user, index) => { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= user.username %></td>
                                                <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                                <td><%= user.email %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- Out of Stock Products Row -->
                <div class="row mt-4">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Out of Stock Products</h5>
                                <table class="table table-borderless">
                                    <thead>
                                        <tr>
                                            <th>SLNO</th>
                                            <th>Product Name</th>
                                            <th>Brand</th>
                                            <th>Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% outOfStockProducts.forEach((product, index) => { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= product.name %></td>
                                                <td><%= product.brand %></td>
                                                <td>₹<%= product.price %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                    </div>
                    
                    <div class="col-md-4 ms-auto">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Recent Orders</h5>
                                <table class="table table-borderless">
                                    <thead>
                                        <tr>
                                            <th>OrderId</th>
                                            <th>Status</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% newOrders.forEach((order) => { %>
                                            <tr>
                                                <td><%= order.orderId %></td>
                                                <td><%= order.status %></td>
                                                <td>₹<%= order.totalAmount %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
    
                
            </main>
        </div>
    </div>
    
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
